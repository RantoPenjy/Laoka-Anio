{% extends 'base.html.twig' %}

{% block title %}Tongasoa eto @ Laoka anio{% endblock %}

{% block body %}

    <div class="container d-flex justify-content-center align-items-center h-100">
        <div class="text-center">
            <h1 class="fw-bold">Laoka anio</h1>
            <h4>
                {% for mlg in malagasy_day %}
                    {% if day == mlg.name %}
                        {{ mlg.traduction }}
                    {% endif %}
                {% endfor %}
                {{ date }}
                {% for mlg in malagasy_month %}
                    {% if month == mlg.name %}
                        {{ mlg.traduction }}
                    {% endif %}
                {% endfor %}
                {{ year }}
            </h4>
            <p class="mt-3">Leo ny mitady laoka isan'andro? Tsindrio ny bokotra</p>
            <a type="button" class="btn btn-primary mb-3" style="width: 300px" id="randomBtn">
                <span id="randomBtnText">Hisafidy</span>
                <div id="randomBtnSpinner" class="spinner-border spinner-border-sm text-light" hidden>
                    <span class="visually-hidden">Loading...</span>
                </div>
            </a>
            <h2 class="mb-3" id="randomResult"></h2>
            {% if(app.user) %}
                <a href="{{ path('add_plat') }}" class="text-decoration-none mt-3">Hanampy laoka vaovao</a><br>
                <a href="{{ path('plat_list') }}" class="text-decoration-none mt-3">Hijery ny laoka rehetra misy</a>
            {% endif %}
        </div>
    </div>

    <div class="fixed-top text-center d-flex justify-content-between bg-dark px-3 languages">
        <div class="">
            {% if(app.user) %}
                <a href="{{ path('app_logout') }}" class="text-decoration-none">Déconnexion</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="text-decoration-none me-3">Connexion</a>
                <a href="{{ path('app_register') }}" class="text-decoration-none">Inscription</a>
            {% endif %}
        </div>
        <div class="">
            {% if(app.user) %}
                <span class="text-white">{{ app.user.name }} {{ app.user.firstname }}</span>
            {% endif %}
        </div>
        <div class="">
            <a href="" class="text-decoration-none me-3">Français</a>
            <a href="{{ path('delete_plat', {id: 6}) }}" class="text-decoration-none">Malagasy</a>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('custom') }}
{% endblock %}

